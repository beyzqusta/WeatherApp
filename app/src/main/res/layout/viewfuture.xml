<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xlmns="http://schemas.android.com/apk/res-auto"
    android:id="@+id/textView17"
    android:layout_width="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dayTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        xlmns:layout_constraintBottom_toBottomOf="parent"
        xlmns:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        xlmns:layout_constraintTop_toTopOf="parent"
        android:text="day"/>

    <ImageView
        android:id="@+id/pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        xlmns:layout_constraintBottom_toBottomOf="parent"
        xlmns:layout_constraintStart_toEndOf="@id/dayTxt"
        xlmns:layout_constraintTop_toTopOf="parent"
        xlmns:srcCompat="@drawable/sunnyy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusTxt"
        android:layout_marginStart="16dp"
        android:text="status"
        android:textColor="@color/white"
        xlmns:layout_constraintBottom_toBottomOf="@+id/pic"
        xlmns:layout_constraintStart_toEndOf="@+id/pic"
        xlmns:layout_constraintTop_toTopOf="@id/pic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lowTxt"
        android:text="10"
        android:textColor="@color/white"
        android:layout_marginEnd="8dp"
        xlmns:layout_constraintBottom_toBottomOf="parent"
        xlmns:layout_constraintEnd_toEndOf="parent"
        xlmns:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highTxt"
        android:layout_marginEnd="32dp"
        android:text="20"
        android:textColor="@color/white"
        xlmns:layout_constraintBottom_toBottomOf="parent"
        xlmns:layout_constraintEnd_toEndOf="@id/lowTxt"
        xlmns:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>